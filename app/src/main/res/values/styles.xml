<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="SummaryCard" parent="CardView">
    <item name="cardCornerRadius">@dimen/default_card_corner</item>
    <item name="android:layout_margin">@dimen/default_card_margin</item>
    <item name="cardBackgroundColor">@color/secondaryDarkColor</item>
  </style>
  <style name="SummaryCardDisabled" parent="SummaryCard">
    <item name="cardBackgroundColor">#737373</item>
  </style>
  <style name="SummaryHeader" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">18sp</item>
    <item name="font">@font/basic</item>
    <item name="android:textColor">@color/secondaryTextColor</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_margin">@dimen/default_view_margin</item>
  </style>
  <style name="SummaryValue" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">24sp</item>
    <item name="font">@font/basic</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_margin">@dimen/default_view_margin</item>
  </style>
</resources>