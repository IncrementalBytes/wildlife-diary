            <TextView
              android:id="@+id/summary_text_handled_medication_value"
              style="@style/SummaryValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{String.valueOf(summary.TotalHandledMedication)}"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/summary_text_handled_medication" />

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/summary_card_handled_subcutaneous"
          style="@style/SummaryCard"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/summary_guideline"
          app:layout_constraintTop_toBottomOf="@id/summary_card_handled_gavage"
          android:onClick="@{(view) -> summary.TotalHandledSubcutaneous > 0 ? fragment.onCardClick(view) : null}">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
              android:id="@+id/summary_text_handled_subcutaneous"
              style="@style/SummaryHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/header_handled_subcutaneous"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/summary_text_handled_subcutaneous_value"
              style="@style/SummaryValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{String.valueOf(summary.TotalHandledSubcutaneous)}"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/summary_text_handled_subcutaneous" />

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/summary_card_handled_euthanasia"
          style="@style/SummaryCard"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/summary_guideline"
          app:layout_constraintTop_toBottomOf="@id/summary_card_handled_medication"
          android:onClick="@{(view) -> summary.TotalHandledEuthanasia > 0 ? fragment.onCardClick(view) : null}">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
              android:id="@+id/summary_text_handled_euthanasia"
              style="@style/SummaryHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/header_handled_euthanasia"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/summary_text_handled_euthanasia_value"
              style="@style/SummaryValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{String.valueOf(summary.TotalHandledEuthanasia)}"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/summary_text_handled_euthanasia" />

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/summary_fab_add"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/fab_margin"
      android:contentDescription="@string/desc_add_encounter"
      android:elevation="2dp"
      android:src="@drawable/ic_add_dark"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:visibility="visible" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
