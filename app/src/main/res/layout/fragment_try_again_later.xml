<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center_horizontal|center_vertical"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/try_again_text_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/placeholder"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textColor="@color/primaryTextColor"
    app:layout_constraintBottom_toTopOf="@id/try_again_button_try_again"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <Button
    android:id="@+id/try_again_button_try_again"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_try_again"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <Button
    android:id="@+id/try_again_button_sign_out"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_sign_out"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/try_again_button_try_again"/>

</androidx.constraintlayout.widget.ConstraintLayout>