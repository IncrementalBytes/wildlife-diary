<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="net.whollynugatory.android.wildlife">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_app_icon"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/Theme.Wildlife"
    android:fullBackupContent="@xml/backup_descriptor">

    <meta-data
      android:name="com.google.firebase.messaging.default_notification_icon"
      android:resource="@drawable/ic_notification_dark" />
    <meta-data
      android:name="com.google.firebase.messaging.default_notification_channel_id"
      android:value="@string/default_notification_channel_id" />

    <activity android:name=".ui.SignInActivity" android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".ui.MainActivity" android:configChanges="uiMode" />

    <service
      android:name=".WildlifeMessagingService"
      android:exported="false">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT" />
      </intent-filter>
    </service>

  </application>
</manifest>
